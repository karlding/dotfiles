# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.csv]
insert_final_newline = false

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2
quote_type = double

# JSON
[*.json]
insert_final_newline = false

[*.{md,markdown}]
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Windows scripts
[{*.cmd,*.bat,*.reg,*.ps1,*.vbs,*.cs,*.fs,*.fsx,*.ahk}]
end_of_line = crlf
